<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace:名称空间,最后面改成接口名
-->
<mapper namespace="com.itheima.reggie.mapper.DishMapper">


    <update id="updateStatusByIds">
        update dish set status = #{status}
<where>
    <foreach collection="ids" item="id" open="id in(" close=")" separator=",">
        #{id}
    </foreach>
</where>


    </update>

    <!--   逻辑删除，修改删除字段参数-->
    <update id="updateByIds">
        update dish set is_deleted = 1
        <where>
            <foreach collection="ids" item="id" open="id in(" close=")" separator=",">
                #{id}
            </foreach>
        </where>
    </update>

    <!--套餐添加->菜品添加-->
    <select id="getDishWithCategoryId" resultType="com.itheima.reggie.entity.Dish">
        select * from dish where category_id = #{categoryId}
    </select>
</mapper>